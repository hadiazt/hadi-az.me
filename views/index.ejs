<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="theme-color" content="#0075d5">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="translucent">
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="Classification" content="Image" />
    <meta name="subject" content="<%- config.page.meta.content %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="theme-color" content="<%- config.page.meta.color %>" />
    <meta name="twitter:card" value="summary" />
    <meta name="twitter:title" content="<%- config.page.title %>" />
    <meta name="twitter:description" content="<%- config.page.meta.content %>" />
    <meta name="twitter:image" content="<%- config.page.icon %>" />
    <meta property="og:title" content="<%- config.page.title %>" />
    <meta property="og:description" content="<%- config.page.meta.content %>" />
    <meta property="og:image" content="<%- config.page.icon %>" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="<%- config.page.meta.content %>" />
    <meta name="author" content="<%- config.page.title %>" />
    <title>
        <%- config.page.title %>
    </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="<%- config.page.icon %>">
    </link>
    <link rel="stylesheet" href="/css/main.css">
    </link>
    <link rel="stylesheet" href="/css/bars.css">
    </link>

    <script src="https://kit.fontawesome.com/31fd7c4de0.js" crossorigin="anonymous"></script>

</head>

<body>


    <div class="left">
        <div class="header">
            <img class="image" src="<%- config.left.imglink %>">
            <h2 class="name">
                <%- config.left.name %>
            </h2>
            <div class="abilities">
                <% config.left.abilities.forEach(ability=> { %>
                    <%- ability %></br>
                <% }) %>
            </div>
        </div>
        <div class="description">

            <p class="description-infos">
                <span style="float:right;">: ملیت</span><span class="infos" ><%- config.left.country %></span></br>
                <span style="float:right;">: شهر</span><span class="infos"><%- config.left.city %></span></br>
                <span style="float:right;">: سن</span><span class="infos"><%- config.left.age %></span></br>
            </p>
            
            <hr>

            <% config.left.langs_name.forEach(lang_name=> { %>
                <div class="skills">
                    <div class="details">
                        <span><%- lang_name %></span>
                    </div>
                    <div class="bar">
                        <div id="<%- lang_name %>-bar"></div>
                    </div>
                </div>
            <% }) %>
            <hr>
            
            <% config.left.skills_name.forEach(skill_name=> { %>
                <div class="skills">
                    <div class="details">
                        <span><%- skill_name%></span>
                    </div>
                    <div class="bar">
                        <div id="<%- skill_name%>-bar"></div>
                    </div>
                </div>
            <% }) %>

            <hr>

            <div class="social-buttons">
                <a class="social-buttons"  href="https://github.com/hadiazt" target="_blank" ><i class="fab fa-github-square"></i></a>
                <a class="social-buttons" href="https://discords.com/bio/p/hadiaz" target="_blank"><i class="fab fa-discord"></i></a>
                <a class="social-buttons" href="tel:+989036812503" target="_blank"><i class="fas fa-phone"></i></a>
                <a class="social-buttons" href="https://instagram.com/hadi._.azt" target="_blank"><i class="fab fa-instagram"></i></a>
                <a class="social-buttons" href="https://t.me/hadiazt" target="_blank"><i class="fab fa-telegram"></i></a>
                <a class="social-buttons" href="mailto:azarihadi81@gmail.com" target="_blank"><i class="fas fa-envelope"></i></a>
            </div>

            <hr>

            <div class="repo-dn">
                <a class="repo-dn" href="https://github.com/hadiazt/hadi-az.me/archive/refs/heads/main.zip" target="_blank">
                    <i class="fas fa-download"></i>                    
                    <span>دانلود قالب</span>
                </a>
            </div> 

            
        </div>

    </div>

    <div class="right-up"></div>
    <div class="right-down"></div>

</body>

</html>